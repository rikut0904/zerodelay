# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key

# Firebase Admin SDK Credentials (for Railway/Cloud deployment)
# Copy the entire content of serviceAccountKey.json as a single-line JSON string
# Example: FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key_id":"..."}
# Note: If this is set, serviceAccountKey.json file is not required
FIREBASE_CREDENTIALS_JSON=

NO_PROXY="localhost:8080,127.0.0.1"  

# Database Log Level
# Options: silent, error, warn, info
# Default: warn
# Recommended: warn (production), info (development)
DB_LOG_LEVEL=warn
